{
    "run": {
        "allow-parallel-runners": true
    },
    "linters": {
        "disable-all": true,
        "enable": [
            "asciicheck",
            "bidichk",
            "contextcheck",
            "deadcode",
            "durationcheck",
            "errorlint",
            "exhaustive",
            "exportloopref",
            "forcetypeassert",
            "godot",
            "gofmt",
            "gosec",
            "gosimple",
            "govet",
            "ineffassign",
            "makezero",
            "nilerr",
            "noctx",
            "nolintlint",
            "prealloc",
            "predeclared",
            "revive",
            "sqlclosecheck",
            "staticcheck",
            "structcheck",
            "stylecheck",
            "tenv",
            "testpackage",
            "thelper",
            "tparallel",
            "unconvert",
            "unparam",
            "unused",
            "varcheck",
            "wastedassign",
            "whitespace"
        ]
    },
    "linters-settings": {
        "exhaustive": {
            "default-signifies-exhaustive": true
        },
        "nolintlint": {
            "allow-leading-space": false,
            "allow-unused": true,
            "require-explanation": false,
            "require-specific": true
        }
    }
}
